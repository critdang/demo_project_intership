<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="/api/client/" method="POST">
                <div class="form-row">
                    
                    <div class="col-12 mt-3">Profile</div>
                    <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Email</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Avatar</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% for(var i = 0; i <data.length; i++) { %>
                          <tr>
                            <th scope="row"><%=i+1%></th>
                            <td><%= data[i].Client.client_email %></td>
                            <td><%= data[i].Client.firstName %></td>
                            <td><%= data[i].Client.lastName %></td>
                            <td><%= data[i].Client.age %></td>
                            <td><%= data[i].Client.avatar %></td>
                            <td>
                                <a href="/client/update_view/<%=data[i].Client.client_id %>">Edit</a> <br />
                                <a href="/admin/<%=class_id%>/delete_client_in_class/<%=data[i].Client.client_id %>">Delete</a>
                              </td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                </div>
            </form>
        </div>
    </div>
</body>
</html>