<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="/api/classes?status=open" method="GET">
                <div class="form-row">
                    <div class="col-12 mt-3">List Registration</div>
                    <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Registration Date</th>
                            <th scope="col">Class id</th>
                            <th scope="col">Client id</th>
                            <th scope="col">Status</th>
                          </tr>
                        </thead>
                        <tbody>
                        <% data.forEach((item)=> { %>
                          <tr>
                            <th scope="row">1</th>
                            <td><%= item.regisDate %></td>
                            <td><%= item.class_id %></td>
                            <td><%= item.client_id %></td>
                            <td><%= item.status %></td>
                            <td>
                                <a href="/api/classes/admin/submit/accept/<%= item.client_id %>/<%= item.class_id %>">Accept</a> <br />
                                <a href="/api/classes/admin/submit/reject/<%= item.client_id %>/<%= item.class_id %>">Reject</a>
                              </td>
                          </tr>
                        <% }) %>
                        </tbody>
                      </table>
                </div>
            </form>
        </div>
    </div>
</body>
</html>