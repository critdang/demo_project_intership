<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
</head>
<body>
    <div class="container">
        <div class="row">
                <div class="form-row">
                    <div class="col-12 mt-3">List Registration</div>
                    <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Registration Date</th>
                            <th scope="col">Class id</th>
                            <th scope="col">Client id</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i= 0; i<data.length; i++) { %>

                          <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data[i].regisDate %></td>
                            <td><%= data[i].class_id %></td>
                            <td><%= data[i].client_id %></td>
                            <td><%= data[i].status %></td>
                            <td>
                              <%if(data[i].status == 'pending'){%>
                                <button class="btn btn-primary" onClick="handleAccept(`<%= data[i].class_id %>`,`<%= data[i].client_id %>`, `accept`)">Accept</button> <br />
                                <button class="btn btn-warning" onClick="handleReject(`<%= data[i].class_id %>`,`<%= data[i].client_id %>`, `reject`)">Reject</button> <br />
                              <%}%>
                              </td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                </div>
        </div>
    </div>
</body>
<script>
  function handleAccept(class_id, client_id,action) {
    let result = axios.post("http://localhost:8080/admin/submitClassRegis", 
    {class_id,client_id,action}
    ).then(response => {
      console.log(response)
      Swal.fire({
        icon: 'success',
        title: 'Accept!',
        showConfirmButton: false,
        timer: 1500
      })
    })
    .catch(error => {
      console.log(error);
    });
  }
  function handleReject(class_id, client_id, action) {
    let result = axios.post("http://localhost:8080/admin/submitClassRegis", 
    {class_id,client_id,action}
    ).then(response => {
      console.log(response)
      Swal.fire({
        icon: 'success',
        title: 'Reject!',
        showConfirmButton: false,
        timer: 1500
      })
    })
    .catch(error => {
      console.log(error);
    });
  }
</script>
</html>