<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="/api/classes?status=open" method="GET">
                <div class="form-row" >
                    <%- include('../components/adminNav.ejs')%>
                  <div class="col-12 mt-3 text-uppercase" style="text-align: center;" >All Classes</div>
                  <a href="/classes/createView" class="btn btn-primary  active" role="button" aria-pressed="true" style="margin-bottom: 15px;">Create Class</a>
                    <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Subject</th>
                            <th scope="col">Class description</th>
                            <th scope="col">Week day</th>
                            <th scope="col">Max Students</th>
                            <th scope="col">Current Students</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Status</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i= 0; i<data.length; i++) { %>

                          <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data[i].subject %></td>
                            <td><%= data[i].class_description %></td>
                            <td><%= data[i].week_day %></td>
                            <td><%= data[i].max_students %></td>
                            <td><%= data[i].current_student %></td>
                            <td><%= data[i].from %></td>
                            <td><%= data[i].to %></td>
                            <td><%= data[i].status %></td>
                            <td>
                                <a href="/classes/updateView/<%=data[i].class_id %>">Edit</a> <br />
                                <a href="/classes/delete/<%=data[i].class_id %>">Delete</a>
                                </br>
                                <a href="/admin/view_clients/<%=data[i].class_id %>">View clients</a>
                              </td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                </div>
            </form>
        </div>
    </div>
</body>
</html>