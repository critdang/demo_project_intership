<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const token = '<%=token%>'
      localStorage.setItem('token', token)
    </script>
</head>
<body>
    <div class="container">
        <div class="row" style="display:block">
            <form action="/api/client/" method="POST" style="width:100%">
              <% data.forEach((item)=> { %>
              
                <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav mr-auto">
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Class Registration
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/client/getOpenClass/<%=item.client_id%>">Regist Class</a>
                        <a class="dropdown-item" href="/client/getPendingClass/<%=item.client_id%>">Cancel Registration</a>
                        <a class="dropdown-item" href="/client/registedClass/<%=item.client_id%>">List Class</a>
                      </div>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="/api/classes/listRegisteredClass/" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Class 
                      </a>
                      <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="/client/registedClass/<%=item.client_id%>">List of registered classes </a>
                        <a class="dropdown-item" href="/client/<%=item.client_id%>/calender">Calendar study</a>
                      </div>
                    </li>
                  </ul>
                  <form class="form-inline my-2 my-lg-0">
                    <a class="btn my-2 my-sm-0" style="color:white;border-color: white;" href="/client/logout">Log Out</a>
                  </form>
                </div>
                </nav>
              <% }) %>
                <div class="form-row">
                    <div class="col-12 mt-3 text-uppercase">Profile</div>
                    <table class="table table-striped">
                      <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Email</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Avatar</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% for(var i= 0; i<data.length; i++) { %>
                          <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td><%= data[i].client_email %></td>
                            <td><%= data[i].firstName %></td>
                            <td><%= data[i].lastName %></td>
                            <td><%= data[i].age %></td>
                            <td><img src="<%=data[i].avatar%>" style="width: 180px"></td>
                            <td>
                                <a href="/client/getProfile">Edit</a> <br />
                                <a href="/client/updateClientPasswordView/<%=data[i].client_id %>">Change Password</a>
                              </td>
                          </tr>
                        <% } %>
                        </tbody>
                      </table>
                </div>
            </form>
        </div>
    </div>
</body>
</html>