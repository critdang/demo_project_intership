<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login view</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const token = '<%=token%>'
      localStorage.setItem('token', token)
    </script>
</head>
<body>
    <div class="container">
        <div class="row">
            <form action="/api/client/" method="POST">
                <div class="form-row">
                    <div class="col-12 mt-3">Profile</div>
                    <table class="table table-striped">
                      <thead>
                          <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Email</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Avatar</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <%=token%>
                        <% data.forEach((item)=> { %>
                          <tr>
                            <th scope="row">1</th>
                            <td><%= item.client_email %></td>
                            <td><%= item.firstName %></td>
                            <td><%= item.lastName %></td>
                            <td><%= item.age %></td>
                            <td><%= item.avatar %></td>
                            <td>
                                <a href="/updateMeView/<%=item.client_id %>">Edit</a> <br />
                                <a href="/updateClientPasswordView/<%=item.client_id %>">Change Password</a>
                              </td>
                          </tr>
                          <a href="api/calender/<%=item.client_id%>" class="btn btn-primary">View Registration</a>
                        <% }) %>
                        </tbody>
                      </table>
                </div>
            </form>
        </div>
    </div>
</body>
</html>